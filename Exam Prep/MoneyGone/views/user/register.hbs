<form action="/user/register" method="POST">
  <h1>Register</h1>
  {{#if errorMessages}}
  {{> error-message}}
  {{/if}}
  <p>Personal info</p>
  <label for="username">Username</label>
  <input id="username" type="text" name="username" value="{{username}}" placeholder="JustMyself123...">

  <label for="password">Password</label>
  <input id="password" name="password" type="password" placeholder="******">

  <label for="repeatPassword">Repeat Password</label>
  <input id="repeatPassword" name="repeatPassword" type="password" placeholder="******">
  <hr>
  <p>Account</p>
  <label for="amount">Amount</label>
  <input id="amount" type="text" name="amount" value="{{amount}}" placeholder="$125.90">

  <button type="submit">Register</button>
</form>